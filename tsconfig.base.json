{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@pharmaiq/types": ["./shared/types/src"],
      "@pharmaiq/types/*": ["./shared/types/src/*"],
      "@pharmaiq/contracts": ["./shared/contracts/src"],
      "@pharmaiq/contracts/*": ["./shared/contracts/src/*"],
      "@pharmaiq/utils": ["./shared/utils/src"],
      "@pharmaiq/utils/*": ["./shared/utils/src/*"]
    }
  }
}